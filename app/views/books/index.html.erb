<h1>Reading Book</h1>
<%= link_to 'New book', new_student_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author name</th>
    <th>Student name</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.text %></td>
      <td style="text-align: center;"><%= book.author.name %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>